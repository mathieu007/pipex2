{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "pipex",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
				"-Wall",
				"-Wextra",
				"-Werror",
                "-I${workspaceFolder}/include/",
                "${workspaceFolder}/src/pipex/*.c",
				"${workspaceFolder}/libft/**/*.c",
				"${workspaceFolder}/libft/lst/**/*.c",
				"${workspaceFolder}/libft/*.c",
                "-o",
                "${workspaceFolder}/pipex"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tâche générée par le débogueur."
        },
		{
            "type": "cppbuild",
            "label": "pipex_bonus",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
				"-Wall",
				"-Wextra",
				"-Werror",
                "-I${workspaceFolder}/include/",
                "${workspaceFolder}/src/bonus/*.c",
				"${workspaceFolder}/libft/**/*.c",
				"${workspaceFolder}/libft/lst/**/*.c",
				"${workspaceFolder}/libft/*.c",
                "-o",
                "${workspaceFolder}/pipex_bonus"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Tâche générée par le débogueur."
        }
    ],
    "version": "2.0.0"
}